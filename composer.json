{
  "name": "shado/reactphp-mailer",
  "description": "A simple, asynchronous email sending library built on top of Symfony Mailer and ReactPHP.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Shado\\React\\Mailer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Shado\\Tests\\React\\Mailer\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jarosław 'Shado' Żak"
    }
  ],
  "require": {
    "php": ">=8.1",
    "react/event-loop": "^1.5",
    "react/promise": "^3.2",
    "react/async": "^4.3",
    "symfony/mailer": "^8.0",
    "react/child-process": "^0.6",
    "clue/ndjson-react": "^1.3",
    "evenement/evenement": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3"
  }
}
